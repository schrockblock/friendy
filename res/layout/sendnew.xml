<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout android:layout_width="fill_parent" android:id="@+id/relativeLayout1" android:layout_height="wrap_content">
    <Button android:text="Send" android:layout_alignParentBottom="true" android:layout_alignParentRight="true" android:id="@+id/send" android:layout_height="wrap_content" android:layout_width="wrap_content"></Button>
    
    <ScrollView 
    	android:layout_above="@id/send"
    	android:layout_width="fill_parent" 
    	android:id="@+id/scrollView1" android:layout_height="wrap_content">
        <LinearLayout 
        	android:id="@+id/ll2" 
        	android:layout_width="fill_parent" android:layout_height="wrap_content"></LinearLayout>
    	<requestFocus></requestFocus>
    	</ScrollView>

        <EditText android:id="@+id/eT2" android:maxLines="2" android:layout_alignParentBottom="true" android:layout_toLeftOf="@id/send" android:layout_width="fill_parent" android:layout_height="wrap_content"></EditText>
        <TextView android:layout_height="wrap_content" android:id="@+id/toview" android:text="To: " android:layout_width="wrap_content" android:paddingTop="5dip" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"></TextView>
        <AutoCompleteTextView android:id="@+id/auto_com" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_toRightOf="@id/toview" android:text=""></AutoCompleteTextView>
	</RelativeLayout>
    
</LinearLayout>